//- Custom Configuration
block config
  //- Setup site's base URL to match the "baseUrl" key within `package.json`
  //- Otherwise default to relative pathing
  - var baseUrl = config.baseUrl || './'

doctype html
<html class='no-js' lang='en'>

head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  title Portfolio

  meta(name='description', content= 'This is portfolio!')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel = 'shortcut icon' href='images/favicon/portfolio.png')
  block stylesheets
    script(src= baseUrl + 'scripts/main-preload.js')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Oswald:200,300,400,500' )
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href= baseUrl + 'styles/main-portfolio.css')
body
